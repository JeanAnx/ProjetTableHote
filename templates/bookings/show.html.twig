{% extends 'base.html.twig' %}

{% block title %}Bookings{% endblock %}

{% block body %}
    <h1>Bookings</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ booking.date ? booking.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Seats</th>
                <td>{{ booking.seats }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ booking.name }}</td>
            </tr>
            <tr>
                <th>Health</th>
                <td>{{ booking.health ? booking.health|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bookings_index') }}">back to list</a>

    <a href="{{ path('bookings_edit', {'id': booking.id}) }}">edit</a>

    {{ include('bookings/_delete_form.html.twig') }}
{% endblock %}
